{
  "swagger": "2.0",
  "info": {
    "description": "HTTP server in Go with Swagger endpoints definition.",
    "title": "go-rest-api",
    "version": "0.1.0",
    "contact": {
      "name": "API Support",
      "email": "alexnou@gmail.com"
    }
  },
  "host": "protected-sea-18092.herokuapp.com",
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/dsp": {
      "post": {
        "summary": "Get the optimal recipe",
        "description": "Get the optimal recipe",
        "operationId": "getDSPRecipe",
        "parameters": [
          {
            "in": "body",
            "name": "recipeRequest",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DSPRecipeRequest"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DSPRecipeResponse"
              }
            }
          },
          "405": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/dsp/recipes": {
      "get": {
        "summary": "Get all DSP recipes",
        "description": "Get all DSP recipes",
        "operationId": "getDSPRecipes",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DSPRecipe"
              }
            }
          }
        }
      }
    },
    "/dsp/recipes/reload": {
      "post": {
        "summary": "Re-scrapes the DSP recipes",
        "description": "Re-scrapes the DSP recipes",
        "operationId": "reloadDSPRecipes",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "string",
              "enum": [
                "OK"
              ]
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Check on the health of the server",
        "operationId": "checkHealth",
        "produces": [
          "text/plain"
        ],
        "responses": {
          "200": {
            "description": "OK.",
            "schema": {
              "type": "string",
              "enum": [
                "OK"
              ]
            }
          }
        }
      }
    }
  },
  "definitions": {
    "DSPRecipe": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "produce": {
          "type": "number"
        },
        "madeIn": {
          "type": "string"
        },
        "time": {
          "type": "number"
        },
        "materials": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/DSPMaterial"
          }
        }
      },
      "required": [
        "name",
        "produce",
        "madeIn",
        "time",
        "materials"
      ]
    },
    "DSPMaterial": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "count": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "count"
      ]
    },
    "DSPRecipeRequest": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "count": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "count"
      ]
    },
    "DSPRecipeResponse": {
      "type": "object",
      "properties": {
        "produce": {
          "type": "string"
        },
        "madeIn": {
          "type": "string"
        },
        "numberOfFacilitiesNeeded": {
          "type": "number"
        },
        "consumesPerSec": {
          "type": "object"
        },
        "secondsSpendPerCrafting": {
          "type": "number"
        },
        "craftingPerSecond": {
          "type": "number"
        },
        "for": {
          "type": "string"
        }
      },
      "required": [
        "produce",
        "madeIn",
        "numberOfFacilitiesNeeded",
        "consumesPerSec",
        "secondsSpendPerCrafting",
        "craftingPerSecond",
        "for"
      ]
    }
  }
}